import Order;
import Finish;
import Rejected;
import Accepted;
import Another;

protocol Recur at Buyer {
	Buyer introduces Seller;

	rec Transaction {
		Order to Seller;
		
		choice {
			tryAgain(Rejected) from Seller;
			Transaction;
		} or {
			exit(Accepted) from Seller;
		}
		
		Another to Seller;
	}
	
	Finish to Seller;
}
