import Order;
import Confirmation;
import OutOfStock;
import InvalidProduct;

protocol MultiPartyInteractionsAndChoice2 at Broker(role Buyer) {
	Order from Buyer;
	
	choice at Broker {
		Broker introduces Seller;

		Order to Seller;
	
		choice {
			Confirmation from Seller;
			Confirmation to Buyer;
		} or {
			OutOfStock from Seller;
			OutOfStock to Buyer;
		}
	} or {
		invalidProduct(InvalidProduct) to Buyer;
	}
}
