import Order;
import Finish;
import Rejected;
import Accepted;
import Another;

protocol Recur@Seller (role Buyer) {

	rec Transaction {
		Order from Buyer;
		
		choice at Seller {
			tryAgain(Rejected) to Buyer;
			Transaction;
		} or {
			exit(Accepted) to Buyer;
		}
		
		Another from Buyer;
	}
	
	Finish from Buyer;
}
