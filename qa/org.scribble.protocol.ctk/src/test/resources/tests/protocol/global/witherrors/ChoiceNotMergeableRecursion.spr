protocol ChoiceNotMergeableRecursion (role A) {
    A introduces B;
    B introduces C;

	// Not mergable, as the projection at C would result in ambiguity, as
	// to whether the received l0() message should trigger the recursion or not.
	
    rec X {
        choice from A to B {
            l1():
            	l0() from B to C;
            	X;
            	
            l2():
            	l0() from B to C;
        }
    }
}