import Order;
import Finish;
import Rejected;
import Accepted;
import Another;

protocol Recur {
	role Buyer, Seller;

	rec Transaction {
		Order from Buyer to Seller;
		
		choice at Seller {
			tryAgain(Rejected) from Seller to Buyer;
			Transaction;
		} or {
			exit(Accepted) from Seller to Buyer;
		}
		
		Another from Buyer to Seller;
	}
	
	Finish from Buyer to Seller;
}
